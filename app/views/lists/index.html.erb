<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://legacybox.com/cdn/shop/articles/LBFilmReel_1024x1024.jpg?v=1563402798);">
  <div class="container">
    <h1>Save any kind of movies</h1>
    <p>Adam's page</p>
  </div>
</div>
<div class="d-flex justify-content-end">
  <%= link_to "Add list", new_list_path, class: "btn btn-success d-flex" %>
</div>

<div class="container">
  <h3 class="header">My lists</h3>
  <div class="container d-flex justify-content-center">
    <div class="cards">
      <% @lists.each do |list| %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path list.photo.key ,width: 600, height: 600, crop: :fill %>)">
          <%= link_to list.name, list_path(list) %>
        </div>
      <% end %>
    </div>
  </div>
</div>



<% @song.reviews.each do |review| %>
  <%= review.content %>
<% end %>
